    <style name="DownloadTextViewStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/aneklatin_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/dpneg2</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray_898989</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">2.19 GB</item>
    </style>

