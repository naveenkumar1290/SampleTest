    <style name="MyCustomTextTab" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:fontFamily">@font/aneklatin_medium</item>
        <item name="android:textAllCaps">false</item>
