    <style name="videosheetDialogTheme" parent="videosheetDialog" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinnerTheme">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="BottomBarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:layout_marginTop">@dimen/dp2</item>
        <item name="android:layout_marginBottom">@dimen/dp4</item>
        <item name="android:textColor">@color/gray_919192</item>
        <item name="android:fontFamily">@font/aneklatin_medium</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>

    <style name="EnableDisableMaterialButtonStyle">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="fontFamily">@font/aneklatin_semi_bold</item>
        <item name="graph">@id/center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="cornerRadius">@dimen/dp7</item>
        <item name="backgroundTint">@color/button_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/rectangle_ripple_effect</item>
        <item name="android:focusable">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="BlueMaterialButtonStyle">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="fontFamily">@font/aneklatin_semi_bold</item>
        <item name="graph">@id/center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="cornerRadius">@dimen/dp7</item>
        <item name="backgroundTint">@color/pink</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/rectangle_ripple_effect</item>
        <item name="android:focusable">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="GrayMaterialButtonStyle">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="fontFamily">@font/aneklatin_medium</item>
        <item name="graph">@id/center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="cornerRadius">@dimen/dp7</item>
        <item name="backgroundTint">?attr/customColorBtnDisable</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/rectangle_ripple_effect</item>
        <item name="android:focusable">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="DarkGrayMaterialButtonStyle">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="fontFamily">@font/aneklatin_medium</item>
        <item name="graph">@id/center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="cornerRadius">@dimen/dp7</item>
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="WhiteMaterialButtonStyle">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="fontFamily">@font/aneklatin_semi_bold</item>
        <item name="graph">@id/center</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/dp7</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
