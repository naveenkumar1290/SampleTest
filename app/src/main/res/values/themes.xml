<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">?attr/customAccentColor</item>
        <item name="windowActionBar">true</item>
        <item name="android:listDivider">@color/color_nav_divider</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="customBackground">@drawable/dark_theme_bg</item>
    </style>

    <style name="Theme.Netflix" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DemoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="MyPopupMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>

    <style name="AppBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle2</item>
    </style>

    <style name="AppModalStyle2" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drwble_bottom_sheet</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Text Size -->
        <item name="android:textSize">@dimen/sp13</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">#66FFFFFF</item>
        <!-- Icon Color -->

        <item name="colorControlNormal">@color/white</item> 
        <item name="text_color">@color/white</item>
        <item name="closeIconTint">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:fontFamily">@font/aneklatin_medium</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drawable_bottom_sheet_premium</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>

    <style name="radioButton" parent="Theme.AppTheme">
        <item name="colorControlNormal">@color/white_off</item>
        <item name="colorAccent">@color/color_speed</item>
        <item name="text_color">color/white</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NegativeButtonStyleForQualityDialog" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositiveButtonStyleForQualityDialog" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavThem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/redColor</item>
    </style>

    <style name="Theme.Splash" parent="Theme.AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="SpinnerDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
        <item name="android:background">?attr/colorBackgroundFloating</item>
        <item name="android:dialogCornerRadius" tools:targetApi="28">4dp</item>
    </style>

    <style name="SpinnerDatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
    </style>
    <style name="CustomDatePickerTheme" parent="Theme.Material3.Light.Dialog">
        <!-- Change the color of the selected date background -->
        <item name="colorPrimary">?attr/customAccentColor</item>
        <item name="colorOnPrimary">?attr/customAccentColor</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <!--<style name="DisablePreview" parent="Theme.AppTheme">
        <item name="android:windowDisablePreview">true</item>
    </style>-->
</resources>